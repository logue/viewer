<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="panel_login" focus_root="true">
  <panel.string name="forgot_password_url">http://secondlife.com/account/request.php</panel.string>
  <panel.string name="sign_up_url">https://join.secondlife.com/</panel.string>
  <layout_stack name="ui_stack">
    <layout_panel name="ui_container">
      <combo_box label="ユーザー名" tool_tip="登録時に自分で選んだユーザー名（例：bobsmith12、Steller Sunshineなど）" name="username_combo">
        <combo_box.combo_editor text_pad_left="8" bg_image_always_focused="true" />
      </combo_box>
      <line_editor name="password_edit" label="パスワード" />
      <combo_box label="お気に入りの場所" name="start_location_combo">
        <combo_box.item label="最後にいた場所" name="MyLastLocation" />
        <combo_box.item label="ホーム" name="MyHome" />
      </combo_box>
      <button label="ログイン" name="connect_btn" />
      <text name="sign_up_text">サインアップ</text>
      <check_box label="名前を記憶" name="remember_name" tool_tip="すでに記憶されているユーザーは、「私」＞「初期設定」＞「詳細設定」＞「記憶されたユーザー名」から削除できます。" />
      <check_box label="パスワードを保存" name="remember_password" />
      <combo_box label="グリッドを選択" layout="topleft" name="server_combo" />
      <text name="forgot_password_text">パスワードを忘れましたか？</text>
    </layout_panel>
  </layout_stack>
</panel>