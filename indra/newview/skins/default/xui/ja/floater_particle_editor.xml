<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="particle_editor_floater" title="パーティクルエディタ">
  <layout_stack name="master_stack">
    <layout_panel name="layout_master">
      <accordion name="accordion_master">
        <accordion_tab name="burst_tab" title="バースト／エイジ">
          <panel name="burst_panel" top="0" right="-1">
            <slider name="burst_rate" label="レート：" />
            <slider name="burst_count" label="数：" />
            <slider name="burst_radius" label="半径：" />
            <slider name="burst_speed_max" label="最大速度：" />
            <slider name="burst_speed_min" label="最低速度：" />
            <slider name="source_max_age" label="発生源の寿命：" />
            <slider name="particle_max_age" label="パーティクルの最大寿命：" />
          </panel>
        </accordion_tab>
        <accordion_tab name="angle_tab" title="スケール／角度">
          <panel name="angle_panel">
            <slider name="scale_start_x" label="開始スケールX：" />
            <slider name="scale_start_y" label="開始スケールY：" />
            <slider name="scale_end_x" label="終了スケールX：" />
            <slider name="scale_end_y" label="終了スケールY：" />
            <slider name="angle_begin" label="開始角度：" />
            <slider name="angle_end" label="終了角度：" />
          </panel>
        </accordion_tab>
        <accordion_tab name="alpha_tab" title="アルファ／グロー">
          <panel name="alpha_panel">
            <slider name="start_alpha" label="開始アルファ：" />
            <slider name="end_alpha" label="終了アルファ：" />
            <slider name="start_glow" label="開始グロー：" />
            <slider name="end_glow" label="終了グロー：" />
          </panel>
        </accordion_tab>
        <accordion_tab name="omega_tab" title="加速／オメガ">
          <panel name="omega_panel">
            <text name="Acceleration_Label">加速：</text>
            <slider name="acceleration_x" label="X：" />
            <slider name="acceleration_y" can_edit_text="true" label="Y：" />
            <slider name="acceleration_z" can_edit_text="true" label="Z：" />
            <text name="Omega_Label">オメガ：</text>
            <slider name="omega_x" label="X：" />
            <slider name="omega_y" label="Y：" />
            <slider name="omega_z" label="Z：" />
          </panel>
        </accordion_tab>
        <accordion_tab name="color_tab" title="色／テスクチャ：">
          <panel name="color_panel">
            <texture_picker name="texture_picker" label="テスクチャ" />
            <color_swatch label="開始色" name="start_color_selector" />
            <color_swatch label="終了色" name="end_color_selector" />
            <combo_box name="blend_func_src_combo">
              <combo_box.commit_callback function="Particle.Edit" />
              <combo_box.item label="ブレンド１" name="blend_one" value="blend_one" />
              <combo_box.item label="ブレンド０" name="blend_zero" value="blend_zero" />
              <combo_box.item label="ブレンド先の色" name="blend_dest_color" value="blend_dest_color" />
              <combo_box.item label="ブレンド元の色" name="blend_src_color" value="blend_src_color" />
              <combo_box.item label="ブレンド１－先の色" name="blend_one_minus_dest_color" value="blend_one_minus_dest_color" />
              <combo_box.item label="ブレンド１－元の色" name="blend_one_minus_src_color" value="blend_one_minus_src_color" />
              <combo_box.item label="ブレンド元のアルファ" name="blend_src_alpha" value="blend_src_alpha" />
              <combo_box.item label="ブレンド１－元のアルファ" name="blend_one_minus_src_alpha" value="blend_one_minus_src_alpha" />
            </combo_box>
            <combo_box name="blend_func_dest_combo">
              <combo_box.commit_callback function="Particle.Edit" />
              <combo_box.item label="ブレンド１" name="blend_one" value="blend_one" />
              <combo_box.item label="ブレンド０" name="blend_zero" value="blend_zero" />
              <combo_box.item label="ブレンド先の色" name="blend_dest_color" value="blend_dest_color" />
              <combo_box.item label="ブレンド元の色" name="blend_src_color" value="blend_src_color" />
              <combo_box.item label="ブレンド１－先の色" name="blend_one_minus_dest_color" value="blend_one_minus_dest_color" />
              <combo_box.item label="ブレンド１－元の色" name="blend_one_minus_src_color" value="blend_one_minus_src_color" />
              <combo_box.item label="ブレンド先のアルファ" name="blend_src_alpha" value="blend_src_alpha" />
              <combo_box.item label="ブレンド１－先のアルファ" name="blend_one_minus_src_alpha" value="blend_one_minus_src_alpha" />
            </combo_box>
          </panel>
        </accordion_tab>
      </accordion>
    </layout_panel>
    <layout_panel name="checkbox_panel">
      <text name="Pattern_Label">パターン：</text>
      <combo_box name="pattern_type_combo">
        <combo_box.commit_callback function="Particle.Edit" />
        <combo_box.item label="爆発" name="explode" value="explode" />
        <combo_box.item label="角度" name="angle" value="angle" />
        <combo_box.item label="角錐" name="angle_cone" value="angle_cone" />
        <combo_box.item label="角錐は空" name="angle_cone_empty" value="angle_cone_empty" />
        <combo_box.item label="ドロップ" name="drop" value="drop" />
      </combo_box>
      <check_box label="跳ねる" />
      <check_box name="emissive_checkbox" label="放射性" />
      <check_box name="wind_checkbox" label="風" />
      <check_box name="ribbon_checkbox" label="リボン" />
      <check_box name="follow_source_checkbox" label="ソースに追従" />
      <check_box name="follow_velocity_checkbox" label="速度に追従" />
      <check_box name="interpolate_color_checkbox" label="色を補間" />
      <check_box name="interpolate_scale_checkbox" label="補間スケール" />
      <check_box name="target_position_checkbox" label="目標位置" />
      <check_box name="target_linear_checkbox" label="線形の目標" />
      <line_editor fname="target_key_input" />
      <button name="clear_target_button" tool_tip="対象物やアバターをクリア" />
      <button name="pick_target_button" tool_tip="ここをクリックして、パーティクルの目標オブジェクトやアバターを選択します。" />
      <button name="copy_button" label="コピー" tool_tip="パーティクルシステムのパラメータを、LSLスクリプトとしてクリップボードにコピーします。" />
      <button name="inject_button" label="注入" tool_tip="このパーティクルシステムを選択したオブジェクトに注入します。" />
    </layout_panel>
  </layout_stack>
</floater>