      <slider_bar top_pad="-18" height="20" increment="0.005" follows="left|top|right" layout="topleft" max_val="1" min_val="0" left="90" right="-75" name="glow_strength_slider" tool_tip="グローシェーダの全体的な強さ。" control_name="RenderGlowStrength"/>
